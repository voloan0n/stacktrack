{
  "name": "stacktrack",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "bootstrap": "node scripts/install.mjs",
    "dev": "pnpm --parallel --filter backend --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "pnpm --parallel --filter backend --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "lint": "pnpm -r lint",
    "format": "prettier --config config/prettier.config.js --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "uninstall": "node scripts/uninstall.mjs"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
