// =========================================================
//                     DATABASE / PRISMA
// =========================================================
DB_USERNAME=stacktrack
DB_PASSWORD=stacktrack
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stacktrack
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

// Optional: bootstrap helpers (only needed if your Postgres install does NOT support `sudo/su - postgres`)
// DB_ADMIN_USER=postgres
// DB_ADMIN_PASSWORD=changeme

// =========================================================
//                    AUTH & SECURITY
// =========================================================
JWT_SECRET="replace-with-64-hex"
COOKIE_SECRET="replace-with-64-hex"
APP_SECRET="replace-with-64-hex"

// =========================================================
//                      SERVER CONFIG
// =========================================================
PORT=4000
NODE_ENV=development

// =========================================================
//                  APP DOMAIN / COOKIES
// =========================================================
APP_DOMAIN=localhost
APP_PROTOCOL=http
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# In production, change these:
# APP_DOMAIN=stacktrack.example.com
# APP_PROTOCOL=https
# ALLOWED_ORIGINS=https://stacktrack.example.com
